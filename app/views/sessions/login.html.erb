<% if flash[:notice] %>
<div class="notice"><%= flash[:notice] %></div>
<% end %>

<%= form_tag login_path, class: "login-form" do  %>
<div class="form-group">
  <%= label_tag :username, nil, class: "control-label" %>
  <%= text_field_tag :username, nil, class: "form-control", required: true %>
</div>

<div class="form-group">
  <%= label_tag :password, nil, class: "control-label" %>
  <%= password_field_tag :password, nil, class: "form-control", required: true %>
</div>
<%= submit_tag "Login", id: "login", class: "btn btn-block btn-success text-center" %>

<div class="form-group">
	<br>
	<p>Don't have an account? <%= link_to "Signup here", signup_path %></p>
</div>

<% end %>
