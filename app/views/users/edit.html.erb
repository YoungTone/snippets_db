<% if flash[:notice] %>
<div class="notice"><%= flash[:notice] %></div>
<% end %>

<%= form_for @user, url: {action: "update"}, html: {class: "edit-form"} do |f| %>
<%= render partial: "shared/errors", locals:{instance: @user} %>
<div class="form-group">
  <%= f.label :username, class: "control-label" %>
  <%= f.text_field :username, class: "form-control", required: true %>
</div>
<div class="form-group">
  <%= f.label :email, class: "control-label" %>
  <%= f.email_field :email, class: "form-control", required: true %>
</div>
<div class="form-group">
  <%= f.label :password, class: "control-label" %>
  <%= f.password_field :password, class: "form-control", required: true %>
</div>
<%= f.submit "Edit Info", id: "submit-user", class:"btn btn-block btn-success text-center" %>
<div class="form-group">
<% end %>

